<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical" >
	
	    <TextView
	        android:id="@+id/txtStatus"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Text placeholder"
	        android:gravity="center"
	        android:layout_gravity="center"
	         
	        />
	    
	    <Button 
	        android:id="@+id/btnShowKeyboard"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:layout_gravity="center"
	        android:text="Show keyboard"
	        />
	
	    <Button 
	        android:id="@+id/btnHideKeyboard"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:layout_gravity="center"
	        android:text="Hide keyboard"
	        android:layout_marginBottom="20dp"
	        />
	    
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:textSize="20dp"
	        android:text="Filler 1"
	        android:background="#ffff0000"
	        android:layout_marginBottom="20dp"
	        />
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:textSize="20dp"
	        android:text="Filler 2"
	        android:background="#ffff0000"
	        android:layout_marginBottom="20dp"
	        />
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:textSize="20dp"
	        android:text="Filler 3"
	        android:background="#ffff0000"
	        android:layout_marginBottom="20dp"
	        />
	    	    
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:textSize="20dp"
	        android:text="Filler 4"
	        android:background="#ffff0000"
	        android:layout_marginBottom="20dp"
	        />
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:textSize="20dp"
	        android:text="Filler 5"
	        android:background="#ffff0000"
	        android:layout_marginBottom="20dp"
	        />
	    	    
	   </LinearLayout>
</ScrollView>